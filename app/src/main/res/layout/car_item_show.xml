<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_335"
    android:layout_height="@dimen/dp_118"
    android:padding="@dimen/dp_9"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_15"
    android:orientation="horizontal"

    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <CheckBox
        android:id="@+id/car_item_show_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/home_rxxp_shape"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/car_item_show_image"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_93"
            fresco:roundedCornerRadius="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_98"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/car_item_show_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:textSize="@dimen/sp_12"
                android:textColor="#999999"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_3"
                >
                <TextView
                    android:id="@+id/car_item_show_price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:textColor="#f00"
                    android:layout_weight="4"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:text="1111"
                    />
                <Button
                    android:id="@+id/car_item_show_button_reduce"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_32"
                    android:text="â€”"
                    />
                <TextView
                    android:id="@+id/car_item_show_text_num"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="2"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/car_item_show_button_add"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_32"
                    android:text="+"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
